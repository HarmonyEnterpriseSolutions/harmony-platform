<?xml version="1.0" encoding="windows-1251"?>
<form title="RadioBox example">
	<logic>
		<block name="store_document">
			<field name="f" datatype='number' scale='0' default='1' />
		</block>
	</logic>
	<layout xmlns:s="GNUe:Layout:Sizer">
		<vbox block="store_document">
			<entry field="f" label="number" />
			<entry field="f" label="1" style="radiobutton" activate_value="1" />
			<entry field="f" label="2" style="radiobutton" activate_value="2" />
		</vbox>
	</layout>
</form>
