	self.find()
</action>

<action name='table__orderAscending__'    label="Сортировка по возрастанию" icon='orderAscending'>
	field = self.getSelectedField()
	if field:
		field.applySortOrder(True)
	else:
		raise error(_('Колонка не выбрана'))
</action>

<action name='table__orderDescending__'   label="Сортировка по убыванию" icon='orderDescending'>
	field = self.getSelectedField()
	if field:
		field.applySortOrder(False)
	else:
		raise error(_('Колонка не выбрана'))
</action>

<action name='table__orderNone__'         label="Отменить сортировку">
	field = self.getSelectedField()
	if field:
		field.applySortOrder(None)
	else:
		raise error(_('Колонка не выбрана'))
</action>

<action name='table__disableOrders__'     label="Отменить все сортировки">
	change = False
	for field in self.getBlock().getFields():
		if field.setSortOrder(None):
			change = True
	if change:
		self.getBlock().refresh()
</action>

<action name='table__cut__'               label="Вырезать" icon="cut">
	self.cut()
</action>

<action name='table__copy__'              label="Копировать" icon="copy">
