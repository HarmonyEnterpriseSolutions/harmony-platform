<!-- Block actions -->

<action name='block__refresh__'           label="Обновить" icon='refresh'>
	try:
		self.getBlock().refresh()
	except NameError: # 'getBlock'
		form.refresh()
</action>

<!-- Table actions -->

<action name='table__filterIncludeCell__' label="Фильтр по значеню ячейки - включить" icon='filterIncludeCell'>
	self.filterIncludeCell()
</action>

<action name='table__filterExcludeCell__'       label="Фильтр по значеню ячейки - исключить" icon='filterExcludeCell'>
